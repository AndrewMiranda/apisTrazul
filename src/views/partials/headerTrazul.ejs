<script>
    function openMenu(){
        let menuHeader = document.getElementsByClassName("menuHeader")[0];
        let optionsHeader = document.getElementsByClassName("optionsHeader")[0];
        let openMenu = menuHeader.getAttribute('open-menu');
        let imgMenu = document.getElementsByClassName("imgMenu")[0];
        if(openMenu == "false"){
            optionsHeader.style.marginRight = "0";
            imgMenu.src = "/images/menuOpenBlue.svg";
            menuHeader.setAttribute('open-menu','true');
        }else{
            imgMenu.src = "/images/menuBlue.svg";
            optionsHeader.style.marginRight = "-100vw";
            menuHeader.setAttribute('open-menu','false');
        }
    }


    function optionServices(){
        let selectHeader = document.getElementsByClassName("selectHeader")[0];
        let open = selectHeader.getAttribute('open-menu');
        let allOptions = document.getElementsByClassName("allOptions")[0];
        let icoSelectHeader = document.getElementsByClassName("icoSelectHeader")[0];

        if(open == "false"){
            allOptions.style.display = "none";
            icoSelectHeader.style.transform = "rotate(0)";
            selectHeader.setAttribute('open-menu','true');
        }else{
            allOptions.style.display = "flex";
            icoSelectHeader.style.transform = "rotate(180deg)";
            selectHeader.setAttribute('open-menu','false');
        }

    }

